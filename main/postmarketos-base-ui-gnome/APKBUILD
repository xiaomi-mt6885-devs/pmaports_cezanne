	gnome-software-plugin-pmos
	gnome-text-editor
	lollypop
	loupe
	xdg-user-dirs
	xdg-user-dirs-gtk
"

package() {
	install -Dm644 -t "$pkgdir"/usr/share/glib-2.0/schemas \
		"$srcdir"/*.override
}

