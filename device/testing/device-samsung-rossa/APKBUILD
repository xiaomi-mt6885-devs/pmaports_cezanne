# Reference: <https://postmarketos.org/devicepkg>
# Maintainer: Raymond Hackley <raymondhackley@protonmail.com>
pkgname=device-samsung-rossa
pkgdesc="Samsung Galaxy Core Prime LTE"
pkgver=3
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	postmarketos-base
	mkbootimg
	linux-postmarketos-qcom-msm8916
	soc-qcom-msm8916
	soc-qcom-msm8916-rproc
"
makedepends="devicepkg-dev"
source="
	deviceinfo
	modules-initfs
	phoc.ini
"
subpackages="
	$pkgname-nonfree-firmware:nonfree_firmware
	$pkgname-phosh
"
_pmb_select="soc-qcom-msm8916-rproc"

# Backwards compatibility for old device package name
_old_pkgname="device-samsung-cprime"
replaces="$_old_pkgname"
provides="$_old_pkgname=$pkgver-r$pkgrel"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="GPU/WiFi/BT/Modem/Video firmware"
	depends="firmware-qcom-adreno-a300 msm-firmware-loader firmware-samsung-rossa-wcnss-nv"
	replaces="$_old_pkgname-nonfree-firmware"
	provides="$_old_pkgname-nonfree-firmware=$pkgver-r$pkgrel"

	mkdir "$subpkgdir"
}

phosh() {
	depends=""
	install_if="$pkgname postmarketos-ui-phosh"
	replaces="$_old_pkgname-phosh"
	provides="$_old_pkgname-phosh=$pkgver-r$pkgrel"

	install -Dm644 "$srcdir"/phoc.ini \
		"$subpkgdir"/etc/phosh/phoc.ini
}

