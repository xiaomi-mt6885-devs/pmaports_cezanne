pkgname=firmware-xiaomi-fire
pkgver=0.1
pkgrel=0
pkgdesc="Proprietary firmware for Xiaomi Redmi 12"
url="https://github.com/mt6768-mainline/firmware-xiaomi-fire"
arch="aarch64"
license="proprietary"
options=!check
source="$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/0.1.tar.gz
"

package() {
  cd "$builddir/lib/firmware"
  install -Dm644 * -t \
    "$pkgdir/lib/firmware/"
}
