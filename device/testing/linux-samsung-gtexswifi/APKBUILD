# Reference: <https://postmarketos.org/vendorkernel>
# Kernel config based on: arch/arm/configs/gtexswifi-dt_defconfig

pkgname=linux-samsung-gtexswifi
pkgver=3.10.65
pkgrel=0
pkgdesc="Samsung Galaxy Tab A 7.0 kernel fork"
arch="armv7"
_carch="arm"
_flavor="samsung-gtexswifi"
url="https://kernel.org"
license="GPL-2.0-only"
options="!strip !check !tracedeps pmb:cross-native"
makedepends="
	bash
	bc
	bison
	devicepkg-dev
	dtbtool-sprd
	flex
	openssl-dev
	perl
	linux-headers
"

# Source
_repository="android_kernel_samsung_gtexswifi-stock"
_commit="cc266a05e0337c26f8a0ed29efdaca1ea1caf55f"
_config="config-$_flavor.$arch"
source="
	$pkgname-$_commit.tar.gz::https://github.com/bfourk/$_repository/archive/$_commit.tar.gz
	$_config
	00_fix_return_address.patch
	fix-dts.patch
	fix_recordmcount.patch
	gcc7-give-up-on-ilog2-const-optimizations.patch
	gcc8-fix-put-user.patch
	gcc10-extern_YYLOC_global_declaration.patch
	kernel-use-the-gnu89-standard-explicitly.patch
	linux3.4-ARM-8933-1-replace-Sun-Solaris-style-flag-on-section.patch
	linux3.4-fix-piggy.gzip.S.patch
	sprdfb-check-for-buffering.patch
	sprdfb-fix-swapped-colors.patch
"
builddir="$srcdir/$_repository-$_commit"
_outdir="out"

prepare() {
	default_prepare
	. downstreamkernel_prepare
}

build() {
	unset LDFLAGS
	make O="$_outdir" ARCH="$_carch" CC="${CC:-gcc}" \
		KBUILD_BUILD_VERSION="$((pkgrel + 1 ))-postmarketOS"

	# Master DTB (deviceinfo_bootimg_qcdt)
	dtbTool-sprd -p "$_outdir/scripts/dtc/" \
		-o "$_outdir/arch/$_carch/boot"/dt.img \
		"$_outdir/arch/$_carch/boot/dts/"
}

package() {
	downstreamkernel_package "$builddir" "$pkgdir" "$_carch" \
		"$_flavor" "$_outdir"
	install -Dm644 "$_outdir/arch/$_carch/boot"/dt.img \
		"$pkgdir"/boot/dt.img
}

