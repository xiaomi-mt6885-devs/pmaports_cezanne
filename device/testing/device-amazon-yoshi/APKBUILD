# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-amazon-yoshi
pkgdesc="Amazon Kindle 4"
pkgver=0.1
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="armv7"
options="!check !archcheck"
depends="
	linux-amazon-yoshi
	mesa-dri-gallium
	postmarketos-base
	u-boot-tools
"
makedepends="devicepkg-dev"
source="deviceinfo amazon-yoshi-bootimg-hack.sh"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
	install -D -m755 $srcdir/amazon-yoshi-bootimg-hack.sh $pkgdir/usr/share/postmarketos-mkinitfs/amazon-yoshi-bootimg-hack.sh
}

