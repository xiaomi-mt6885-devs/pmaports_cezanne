# Archived: Downstream port, only for testing. Use mainline port (samsung-espresso10/samsung-espresso7)!
# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-samsung-espresso10-downstream
pkgdesc="Samsung Galaxy Tab 2 (10.1 inch)"
pkgver=1
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="armv7"
options="!check !archcheck"
depends="postmarketos-base linux-samsung-espresso10-downstream mkbootimg"
makedepends="devicepkg-dev"
source="deviceinfo"
subpackages="$pkgname-nonfree-firmware:nonfree_firmware"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="Wifi firmware"
	depends="firmware-samsung-espresso"
	mkdir "$subpkgdir"
}

